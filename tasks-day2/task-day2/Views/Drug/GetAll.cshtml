@{
    @foreach(var drug in ViewData["drugs"] as List<Drug>)
    {
        <img src="~/Images/@drug.ImagePath"/>
        <a href="~/Drug/DrugDetails/@drug.Id">Drug Details</a>
        <h1>@drug.Name</h1>
        <br/>
        <p>@drug.Description</p>
        <p>@drug.Price L.E</p>
        <br />
        
    }
}

