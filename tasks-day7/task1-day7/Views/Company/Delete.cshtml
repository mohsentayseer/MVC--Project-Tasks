@model Company

<div class="card" style="width: 24rem;">
    <div class="card-body">
        <form method="post" action="~/Company/delete">
            <input asp-for="Id" hidden/>
            <label><strong>Are you sure you want to DELETE @Model.Name ?</strong></label>
            <br />
            <select name="Choice" class="form-control">
                <option value="y">Delete</option>
                <option value="n">Close</option>
            </select>
            <br />
            <input type="submit" class="btn btn-danger">
        </form>
        <br />
        <a href="~/Company/index" class="btn btn-primary">Back to Company List</a>
    </div>
</div>
