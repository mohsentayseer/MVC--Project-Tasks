<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        .navbar {
            overflow: hidden;
            background-color: #333;
        }
            .navbar a {
                float: left;
                display: block;
                color: white;
                text-align: center;
                padding: 14px 20px;
                text-decoration: none;
            }
                .navbar a:hover {
                    background-color: #ddd;
                    color: black;
                }
    </style>
</head>
<body>
    @*<h3>=================================MY Layout ===============================</h3> *@
    <div class="navbar">
        <a>Home</a>
        <a>About</a>
    </div>
    <div>
        @RenderBody()
    </div>
</body>
</html>
